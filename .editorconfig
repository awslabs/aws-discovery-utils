# EditorConfig is awesome: http://EditorConfig.org
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = false
charset = utf-8
indent_size = 2

[*.{html,js}]
indent_style = space
indent_size = 2

[*.{yml,yaml}]
indent_style = space
end_of_line = lf
charset = utf-8
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.py]
insert_final_newline = true
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 4
